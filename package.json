{
  "name": "img2cdn",
  "displayName": "img2cdn",
  "description": "upload image to cdn",
  "version": "1.0.19",
  "icon": "./img2cdn.gif",
  "author": "hahazexia",
  "publisher": "hahazexia",
  "engines": {
    "vscode": "^1.91.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hahazexia/img2cdn"
  },
  "keywords": [
    "vscode",
    "image",
    "cdn"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.uploadImage",
        "title": "uploadImage"
      },
      {
        "command": "extension.img2cdn",
        "title": "img2cdn"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.img2cdn",
          "when": "isFileSystemResource || explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "img2cdn",
      "properties": {
        "img2cdn.uploadApiUrl": {
          "type": "string",
          "default": "",
          "description": "Customize the upload image api used by the extension."
        },
        "img2cdn.uploadApiResKey": {
          "type": "string",
          "default": "res.data.data",
          "description": "Customize the upload image api response key."
        },
        "img2cdn.language": {
          "type": "string",
          "default": "zh",
          "description": "Customize the logger language used by the extension."
        },
        "img2cdn.format": {
          "type": "string",
          "default": "png|jpg|jpeg|gif|bmp|svg",
          "description": "A pipe-separated string of image file extensions for use in regexp search patterns when looking for image files."
        },
        "img2cdn.parallelism": {
          "type": "number",
          "default": 3,
          "description": "Concurrent number of image uploads."
        },
        "img2cdn.imagePathWhitelist": {
          "type": "string",
          "default": "",
          "description": "Comma-separated string, if image url includes some string in imagePathWhitelist, there will not show upload btn."
        },
        "img2cdn.deleteLocalImage": {
          "type": "boolean",
          "default": false,
          "description": "After replacing the local image, delete it."
        },
        "img2cdn.isDarkTheme": {
          "type": "boolean",
          "default": true,
          "description": "Is it a dark theme?"
        },
        "img2cdn.tinypngApiKey": {
          "type": "string",
          "default": "",
          "description": "Tinypng API key to compress image."
        },
        "img2cdn.tinypngTimeout": {
          "type": "number",
          "default": 10000,
          "description": "Tinypng compress image timeout."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "vscode-test",
    "build": "rm -rf ./dist && webpack && cd ./panel-webview && npm run build"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.0",
    "node-loader": "^2.0.0",
    "typescript": "^5.4.5",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "axios": "^1.7.2",
    "chokidar": "^3.6.0",
    "filesize": "^10.1.6",
    "image-size": "^1.1.1",
    "tinify": "^1.7.1",
    "tmp": "^0.2.3"
  }
}
